{
  "manifest_version": 3,
  "name": "LLM Voice Control",
  "version": "0.1",
  "permissions": ["scripting","activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_title": "Voice2RPC"
  }
}
